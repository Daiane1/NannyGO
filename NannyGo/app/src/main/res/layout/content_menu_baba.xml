<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/content_menu_baba"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              app:layout_behavior="@string/appbar_scrolling_view_behavior"
              tools:context="br.com.nannygo.app.MenuBabaActivity"
              tools:showIn="@layout/activity_menu_baba"
              android:orientation="vertical"
    >

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <TableRow
            android:layout_width="wrap_content"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxWidth="250dp"
                android:textSize="13pt"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-smallcaps"
                android:textColor="@color/azul"
                android:id="@+id/text_view_nome"
                android:textAlignment="center"
                android:maxLength="25"
                />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="0dp"
                android:layout_marginBottom="30dp"
                android:src="@drawable/baba"
                android:id="@+id/img_user"
                />

        </TableRow>
    </TableLayout>


    <Button
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/azul"
        android:text="Perfil"
        android:textColor="@color/branco"
        android:onClick="abrirTelaPerfil"
        android:id="@+id/btn_perfil"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/azul"
        android:text="Histórico"
        android:textColor="@color/branco"
        android:onClick="abrirTelaHistoricoBaba"
        android:id="@+id/btn_historico"
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/azul"
        android:text="Esperando aprovação"
        android:textColor="@color/branco"
        android:onClick="abrirTelaTransacoesEspera"
        android:id="@+id/btn_espera"
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:text="Estou disponível"
        android:backgroundTint="@color/azul"
        android:textColor="#fff"
        android:layout_gravity="center_horizontal"
        android:onClick="abrirTelaRegistroBaba"
        android:id="@+id/btn_disponivel"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:text="Não estou disponível"
        android:backgroundTint="@color/azul"
        android:textColor="#fff"
        android:layout_gravity="center_horizontal"
        android:onClick="removerRegistro"
        android:visibility="gone"
        android:id="@+id/btn_indisponivel"/>
</LinearLayout>
