<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_item_baba"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="5dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/nome_item_baba"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/hora_baba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18:00" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/dia_semana_baba"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Finais de semana"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/distancia_baba"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="null km"
                android:gravity="end"
                android:layout_weight="1"/>
                />
        </LinearLayout>
            <TextView
                android:id="@+id/id_baba"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="R$ 100,00"
                android:visibility="gone" />
            <TextView
                android:id="@+id/preco_hora_baba"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"

                android:text="R$ 100,00" />
    </LinearLayout>
</LinearLayout>