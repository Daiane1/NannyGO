<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_item_baba"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginStart="10dp">
        <TableRow>
            <TextView
                android:id="@+id/nome_item_baba"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Nome"
                android:textStyle="bold" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/hora_inicial_baba"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18:00" />
            <TextView
                android:id="@+id/hora_final_baba"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/dia_semana_baba"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Finais de semana" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/id_baba"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$ 100,00"
                android:layout_gravity="end"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/preco_hora_baba"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$ 100,00"
                android:layout_gravity="end"/>
        </TableRow>
    </TableLayout>
    </LinearLayout>